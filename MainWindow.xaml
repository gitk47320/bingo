        <ListView  Name="BingologsView" HorizontalAlignment="Left" Height="238" Margin="228,40,0,0" VerticalAlignment="Top" Width="82" BorderBrush="Black" BorderThickness="0.6" FontSize="12" FontFamily="Meiryo"/>
